<% return unless comic %>
<% #this is semantic markup for passing around lists of comics. %>
<div class="comic_info">
  <div class="title"><%= comic.title %></div>
  <div class="date"><%= comic.date %></div>
  <div class="blurb"><%= raw(comic.blurb) %></div>
  <div class="img_links">
    <ul>
      <li> <%= link_to 'full image', comic.photo.url(), :class => 'full' %> </li>
      <li> <%= link_to 'thumb image', comic.photo.url(:thumb), :class => 'thumb' %> </li>
    </ul>
  </div>
  <% if comic.has_original && comic.original_photo && comic.original_date %>
    <div class="original">
      <%= link_to "See the original from #{comic.original_date} here!", 
                  comic.original_photo.url,
                  :class => 'original_link' %>
    </div>
  <% end %>
  <% if user_is_author? %>
    <div class="controls">
      <%= link_to 'Edit', edit_comic_path(comic), :class => 'edit' %> |
      <%= link_to 'Destroy', comic, :confirm => 'Are you sure?', :method => :delete, :class => 'destroy' %> 
    </div>
  <% end %>
</div>
