<h1>Listing comics</h1>

<table>
  <tr>
    <th>Thumb</th>
    <th>Title</th>
    <th>Date</th>
    <th>Pubish</th>
    <th>Blurb</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comics.each do |comic| %>
  <tr>
    <td><%= image_tag comic.photo.url(:thumb) %></td>
    <td><%= comic.title %></td>
    <td><%= comic.date %></td>
    <td><%= comic.publish %></td>
    <td><%= comic.blurb %></td>
    <td><%= link_to 'Show', comic %></td>
    <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
    <td><%= link_to 'Destroy', comic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

