<!DOCTYPE html>
<html>
<head>
  <title>AnotherWebcomic</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="notice"><%= notice %></div>
  <div class="alert"><%= alert %></div>
  <div id="logo">
    <%= link_to image_tag('/images/logo.png', :alt => "anotherwebcomic.com"), '/' %>
  </div>
  <div id="top_nav">
    <div id="archive_link">
      <%= link_to "Archive", '/' %>
    </div>
    <div id="about_link">
      <%= link_to 'About', :controller => '/pages', :action => 'about'  %>
    </div>
    <div class="clear"> </div>
  </div>
  <div id="content">
<%= yield %>
  </div>
  <div id="footer">
    <% if user_signed_in? %>
      <div id="user_nav">
        Signed in as <%= current_user.username %>.
        <%= link_to "Sign out", destroy_user_session_path %>
      </div>
    <% else %>
        <% # link_to "Sign up", new_user_registration_path %>
    <% end %>
  </div>
</body>
</html>
